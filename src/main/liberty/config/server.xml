<server description="Sample Servlet server">
    <featureManager>
        <feature>microProfile-3.3</feature>
        <feature>monitor-1.0</feature>
    </featureManager>
    <variable name="default.http.port" defaultValue="9080"/>
    <variable name="default.https.port" defaultValue="9443"/>
    <quickStartSecurity userName="admin" userPassword="adminpwd"/>
    <keyStore id="defaultKeyStore" location="key.jks" type="jks" password="mpKeystore"/>
    <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}" id="defaultHttpEndpoint"  host="*" />

    <webApplication id="greeting" location="Greeting.war" contextRoot="/" />
</server>
